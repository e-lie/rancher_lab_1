RANCHER_DOMAIN = "ranchouille.test"
RANCHER_IP = ""
RANCHER_PUB_IP = ""
RANCHER_NAME = "ranchouille"

BOX_IMAGE = "ubuntu/bionic64"

Vagrant.configure("2") do |config|
  config.vm.box = BOX_IMAGE


  config.vm.define "ranchouille-aio" do |node|
    node.vm.hostname = "ranchouille-aio"

    # choose an IP in the the wlp3s0 current CIDR which changes with context (in a bar != at home)
    node.vm.network "public_network", ip:"192.168.1.98",  bridge: "wlp3s0" 
    # node.vm.network "private_network", ip: "#{RANCHER_IP}"
    # node.vm.network "forwarded_port", guest: 8443, host: 8443

    node.vm.provider "virtualbox" do |vb|
      vb.memory = 4096
      vb.cpus = 2
      vb.name = "ranchouille-aio"
    end

    node.vm.provision :shell, inline: <<-SHELL
        apt-get update
        apt-get upgrade -y
        curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
        add-apt-repository \
            "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
            $(lsb_release -cs) \
            stable"
        apt-get update
        apt-get install -y docker-ce docker-ce-cli containerd.io
        usermod -aG docker vagrant
    SHELL
  end

end